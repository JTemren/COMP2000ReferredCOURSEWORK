<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/userProfileImageView"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        android:src="@drawable/test_user_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editUserEmail"
        android:layout_below="@id/userProfileImageView"
        android:importantForAutofill="no"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:drawablePadding="20dp"
        app:drawableStartCompat="@drawable/icon_email"
        tools:ignore="TextFields"
        android:hint="User Email Here"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editUserName"
        android:layout_below="@id/editUserEmail"
        android:importantForAutofill="no"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:drawablePadding="20dp"
        app:drawableStartCompat="@drawable/icon_person"
        tools:ignore="TextFields"
        android:hint="User Full Name Here"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editUserPhoneNumber"
        android:layout_below="@id/editUserName"
        android:importantForAutofill="no"
        android:textColor="@color/black"
        android:layout_marginHorizontal="10dp"
        android:padding="20dp"
        android:drawablePadding="20dp"
        app:drawableStartCompat="@drawable/icon_phone"
        tools:ignore="TextFields"
        android:hint="User Contact Number Here"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editUserProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editUserPhoneNumber"
        android:layout_margin="20dp"
        android:visibility="invisible"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editConfirm"
        android:layout_below="@id/editUserPhoneNumber"
        android:text="Confirm"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:onClick="EditConfirm"
        />

  </RelativeLayout>