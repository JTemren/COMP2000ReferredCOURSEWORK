<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerTxt"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_margin="50dp"
        android:gravity="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerEmail"
        android:layout_below="@id/registerTxt"
        android:hint="Email"
        android:importantForAutofill="no"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableStart="@drawable/icon_person"
        android:drawablePadding="20dp"
        tools:ignore="TextFields"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerPassword"
        android:layout_below="@id/registerEmail"
        android:hint="Password"
        android:importantForAutofill="no"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableStart="@drawable/icon_password"
        android:drawablePadding="20sp"
        android:inputType="textPassword"
        tools:ignore="HardcodedText"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerName"
        android:padding="20sp"
        android:hint="Name"
        android:drawableStart="@drawable/icon_text"
        android:drawablePadding="20sp"
        android:layout_below="@+id/registerPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerPhoneNumber"
        android:padding="20sp"
        android:hint="Phone"
        android:drawableStart="@drawable/icon_phone"
        android:drawablePadding="20sp"
        android:layout_below="@id/registerName"
        android:inputType="phone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerBtn"
        android:layout_below="@id/registerPhoneNumber"
        android:text="Register"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:visibility="visible"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/registerPhoneNumber"
        android:layout_margin="20dp"
        android:visibility="invisible"/>

</RelativeLayout>